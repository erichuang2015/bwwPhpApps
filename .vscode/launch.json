    "version": "0.2.0",
    "configurations": [


        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/home/vagrant/Code": "/myGit/VM/bwwapps"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Listen for XDebug on Homestead",
            "type": "php",
            "request": "launch",
            "pathMappings": {
                "/home/vagrant/Code": "/myGit/VM/bwwapps"
            },
            "port": 9000
        },
        {
            "name": "Launch localhost on chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://bww.phpapps/",
            "webRoot": "/myGit/VM/bwwapps",
            "port": 9000
        },
        {
            "name": "Launch bww.phpapps on firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://bww.phpapps/",
            "webRoot": "/myGit/VM/bwwapps",
        }
    ]
}